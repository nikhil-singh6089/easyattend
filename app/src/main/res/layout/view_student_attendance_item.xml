<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayoutViewStudentItem"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="#BDB85C"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/StudentImage_View_student_item"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/signup_account_box" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewStudentName_View_student_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewStudentRollNumber_view_student_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewStudentAttendanceStatus_view_student_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="TextView" />
    </LinearLayout>

</LinearLayout>